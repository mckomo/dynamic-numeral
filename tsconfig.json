{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declaration": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "lib": [
      "dom",
      "es5",
      "es2015.iterable",
      "es2015.promise",
      "es2015.core",
      "es2015.collection"
    ],
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true
  },
  "include": ["src/**/*.ts*"]
}
